@page "/"

<PageTitle>Cloud Dictionary</PageTitle>

<MudContainer Class="mt-12">
    <MudText Typo="Typo.h2" Align="Align.Center" GutterBottom="false">learn to cloud dictionary</MudText>
    <MudText Typo="Typo.body1" Align="Align.Center" GutterBottom="true">learn cloud one word at a time</MudText>
    <MudContainer Class="d-flex align-center justify-center mud-width-full" style="height:3vh;">
        <MudButton Href="https://github.com/learntocloud/cloud-dictionary/issues/new/choose" Target="_blank"
            Variant="Variant.Filled" EndIcon="@Icons.Custom.Brands.GitHub" Color="Color.Primary" Disabled=@disabled>
            Submit a Definition
        </MudButton>
    </MudContainer>

    <Definitions />
</MudContainer>

@code {
    bool disabled = false;
}
